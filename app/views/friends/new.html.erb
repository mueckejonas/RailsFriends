<% content_for :title, "New friend" %>

<h1>Add new friend</h1>

<%= form_with(model: @friend, local: true) do |form|%>
<br>
<form>
  <div class="mb-3">
    <%= form.label :first_name, class:"form-label"%>
    <%= form.text_field :first_name,class:"form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :last_name, class:"form-label"%>
    <%= form.text_field :last_name,class:"form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :email, class:"form-label"%>
    <%= form.text_field :email,class:"form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :phone, class:"form-label"%>
    <%= form.text_field :phone,class:"form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :twitter, class:"form-label"%>
    <%= form.text_field :twitter,class:"form-control" %>
  </div>
    <%= form.number_field :user_id, id: :friend_usser_id, value: current_user.id, type: :hidden%>
  <div>
    <%= form.submit class:"btn btn-secondary"%>
    <%= link_to "Back", friends_path, class:"btn btn-dark" %>
  </div>
</form>
<%end%>
